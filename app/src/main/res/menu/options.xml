<?xml version="1.0" encoding="utf-8"?>

<!-- contains menu items for custom toolbar actions -->

<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- toolbar save button -->
    <item
        android:id="@+id/action_save"
        android:icon="@drawable/baseline_save_white_48dp"
        android:title="@string/action_save"
        app:showAsAction="always"/>

    <!-- overflow menu items -->
    <item android:id="@+id/menu_rename"
        android:title="@string/menu_rename"
        app:showAsAction="never"/>
    <item android:id="@+id/menu_reset"
        android:title="@string/menu_reset"
        app:showAsAction="never"/>
    <item android:id="@+id/menu_upload"
        android:title="@string/menu_upload"
        app:showAsAction="never"/>
</menu>