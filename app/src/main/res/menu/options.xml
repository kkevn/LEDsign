<?xml version="1.0" encoding="utf-8"?>

<!-- contains menu items for custom toolbar actions -->

<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- toolbar save button -->
    <item
        android:id="@+id/menu_prof_save"
        android:icon="@drawable/ic_baseline_save_24"
        android:title="@string/menu_prof_save"
        app:showAsAction="always"/>

    <!-- bluetooth button -->
    <item
        android:id="@+id/menu_prof_bt"
        android:icon="@drawable/ic_baseline_bluetooth_24"
        android:title="@string/menu_prof_bt"
        app:showAsAction="always"/>

    <!-- overflow menu items -->
    <item android:id="@+id/menu_prof_rename"
        android:title="@string/menu_prof_rename"
        app:showAsAction="never"/>
    <item
        android:title="@string/menu_prof_reset_menu"
        app:showAsAction="never">
        <menu>
            <item
                android:id="@+id/menu_prof_clear"
                android:title="@string/menu_prof_clear" />
            <item
                android:id="@+id/menu_prof_reset"
                android:title="@string/menu_prof_reset" />
        </menu>
    </item>
    <item android:id="@+id/menu_prof_upload"
        android:title="@string/menu_prof_upload"
        app:showAsAction="never"/>

</menu>