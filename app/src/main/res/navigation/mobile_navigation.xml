<?xml version="1.0" encoding="utf-8"?>

<!-- contains all fragments that can be navigated to -->

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_new_profile">

    <fragment
        android:id="@+id/nav_new_profile"
        android:name="com.kkevn.ledsign.ui.home.HomeFragment"
        android:label="@string/menu_new_profile"
        tools:layout="@layout/fragment_new_profile" />

    <fragment
        android:id="@+id/nav_load_profile"
        android:name="com.kkevn.ledsign.ui.gallery.GalleryFragment"
        android:label="@string/menu_load_profile"
        tools:layout="@layout/fragment_load_profile" />

    <fragment
        android:id="@+id/nav_upload_profile"
        android:name="com.kkevn.ledsign.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_upload_profile"
        tools:layout="@layout/fragment_slideshow" />
</navigation>