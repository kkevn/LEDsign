<?xml version="1.0" encoding="utf-8"?>

<!-- contains all fragments that can be navigated to -->

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_new_profile">

    <fragment
        android:id="@+id/nav_new_profile"
        android:name="com.kkevn.ledsign.ui.create.CreateFragment"
        android:label="@string/menu_new_profile"
        tools:layout="@layout/fragment_new_profile" />

    <fragment
        android:id="@+id/nav_load_profile"
        android:name="com.kkevn.ledsign.ui.profiles.ProfilesFragment"
        android:label="@string/menu_load_profile"
        tools:layout="@layout/fragment_load_profile" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.kkevn.ledsign.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_help"
        android:name="com.kkevn.ledsign.ui.help.HelpFragment"
        android:label="@string/menu_help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/nav_help_item"
        android:name="com.kkevn.ledsign.ui.help.HelpViewPagerFragment"
        android:label="@string/menu_help"
        tools:layout="@layout/pager_help_items" />

    <fragment
        android:id="@+id/nav_help_item_fragment"
        android:name="com.kkevn.ledsign.ui.help.HelpItemFragment"
        android:label="@string/menu_help"
        tools:layout="@layout/fragment_help_item" />

    <fragment
        android:id="@+id/nav_about"
        android:name="com.kkevn.ledsign.ui.about.AboutFragment"
        android:label="@string/menu_about"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/nav_config_scrolling_text"
        android:name="com.kkevn.ledsign.ui.configurators.ScrollingTextFragment"
        android:label="@string/menu_configure_scrolling_text"
        tools:layout="@layout/fragment_configure_scrolling_text" />

    <fragment
        android:id="@+id/nav_config_solid_color"
        android:name="com.kkevn.ledsign.ui.configurators.SolidColorFragment"
        android:label="@string/menu_configure_solid_color"
        tools:layout="@layout/fragment_configure_solid_color" />

    <fragment
        android:id="@+id/nav_config_fade_color"
        android:name="com.kkevn.ledsign.ui.configurators.FadeColorFragment"
        android:label="@string/menu_configure_fade_color"
        tools:layout="@layout/fragment_configure_fade_color" />

</navigation>