<?xml version="1.0" encoding="utf-8"?>

<!-- contains elements for a single effect item in the effects selection list -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="4dp">

        <ImageView
            android:id="@+id/iv_icon_select"
            android:background="@drawable/effect_icon_border"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tv_effect_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_icon_select"
            android:layout_toRightOf="@id/iv_icon_select"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:text="Placeholder"
            android:textSize="24dp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>