<resources>

    <!-- base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- styles for a custom Dark theme -->
    <style name="CustomDarkTheme">
    </style>

    <!-- styles for a custom Light theme -->
    <style name="CustomLightTheme">
    </style>

    <!-- styles for all different selectable accent colors -->
    <style name="SelectableAccentColorRed">
        <item name="colorAccent">@color/colorRed</item>
    </style>
    <style name="SelectableAccentColorGreen">
        <item name="colorAccent">@color/colorGreen</item>
    </style>
    <style name="SelectableAccentColorBlue">
        <item name="colorAccent">@color/colorBlue</item>
    </style>
    <style name="SelectableAccentColorPurple">
        <item name="colorAccent">@color/colorPurple</item>
    </style>
    <style name="SelectableAccentColorGray">
        <item name="colorAccent">@color/colorGray</item>
    </style>
    <style name="SelectableAccentColorRed2">
        <item name="colorAccent">@color/colorRed2</item>
    </style>
    <style name="SelectableAccentColorGreen2">
        <item name="colorAccent">@color/colorGreen2</item>
    </style>
    <style name="SelectableAccentColorBlue2">
        <item name="colorAccent">@color/colorBlue2</item>
    </style>
    <style name="SelectableAccentColorPurple2">
        <item name="colorAccent">@color/colorPurple2</item>
    </style>
    <style name="SelectableAccentColorGray2">
        <item name="colorAccent">@color/colorGray2</item>
    </style>
    <style name="SelectableAccentColorRed3">
        <item name="colorAccent">@color/colorRed3</item>
    </style>
    <style name="SelectableAccentColorBlue3">
        <item name="colorAccent">@color/colorBlue3</item>
    </style>
    <style name="SelectableAccentColorGreen3">
        <item name="colorAccent">@color/colorGreen3</item>
    </style>
    <style name="SelectableAccentColorPurple3">
        <item name="colorAccent">@color/colorPurple3</item>
    </style>
    <style name="SelectableAccentColorGray3">
        <item name="colorAccent">@color/colorGray3</item>
    </style>

    <array name="accents_styles">
        <item>@style/SelectableAccentColorRed</item>
        <item>@style/SelectableAccentColorGreen</item>
        <item>@style/SelectableAccentColorBlue</item>
        <item>@style/SelectableAccentColorPurple</item>
        <item>@style/SelectableAccentColorGray</item>
        <item>@style/SelectableAccentColorRed2</item>
        <item>@style/SelectableAccentColorGreen2</item>
        <item>@style/SelectableAccentColorBlue2</item>
        <item>@style/SelectableAccentColorPurple2</item>
        <item>@style/SelectableAccentColorGray2</item>
        <item>@style/SelectableAccentColorRed3</item>
        <item>@style/SelectableAccentColorGreen3</item>
        <item>@style/SelectableAccentColorBlue3</item>
        <item>@style/SelectableAccentColorPurple3</item>
        <item>@style/SelectableAccentColorGray3</item>
    </array>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/nav_default_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_exit_anim</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="DividerSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>