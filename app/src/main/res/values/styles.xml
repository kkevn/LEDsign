    <!-- styles for all different selectable accent colors -->
    <style name="SelectableAccentColorRed">
        <item name="colorAccent">@color/colorRed</item>
    </style>
    <style name="SelectableAccentColorGreen">
        <item name="colorAccent">@color/colorGreen</item>
    </style>
    <style name="SelectableAccentColorBlue">
        <item name="colorAccent">@color/colorBlue</item>
    </style>
    <style name="SelectableAccentColorYellow">
        <item name="colorAccent">@color/colorYellow</item>
    </style>
    <style name="SelectableAccentColorOrange">
        <item name="colorAccent">@color/colorOrange</item>
    </style>
    <style name="SelectableAccentColorPurple">
        <item name="colorAccent">@color/colorPurple</item>
    </style>
    <style name="SelectableAccentColorPink">
        <item name="colorAccent">@color/colorPink</item>
    </style>
    <style name="SelectableAccentColorIndigo">
        <item name="colorAccent">@color/colorIndigo</item>
    </style>
    <style name="SelectableAccentColorLime">
        <item name="colorAccent">@color/colorLime</item>
    </style>

    <array name="accents_styles">
        <item>@style/SelectableAccentColorRed</item>
        <item>@style/SelectableAccentColorGreen</item>
        <item>@style/SelectableAccentColorBlue</item>
        <item>@style/SelectableAccentColorYellow</item>
        <item>@style/SelectableAccentColorOrange</item>
        <item>@style/SelectableAccentColorPurple</item>
        <item>@style/SelectableAccentColorPink</item>
        <item>@style/SelectableAccentColorRed</item>
        <item>@style/SelectableAccentColorRed</item>
    </array>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/nav_default_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_exit_anim</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="DividerSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

